<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="rriskhh.start.medic.DrugAlternatives">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original Drug"
        android:id="@+id/cat"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="2dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#125688"
        android:layout_marginTop="10dp"
        android:id="@+id/alternative"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99D9EA"
        android:layout_margin="20px"
        android:padding="10dp"
        android:id="@+id/drugBut"
        android:textSize="30dp"
        android:text="Find Alternate Drug"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_margin="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:id="@+id/alternate"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:text="Alternate Drug Here"/>


</LinearLayout>
